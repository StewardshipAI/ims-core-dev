# =============================================================================
# IMS CORE - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env file to git! It contains secrets.

# Database Configuration
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/ims_db
TEST_DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/ims_test_db

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0

# API Security
ADMIN_API_KEY=CHANGE_ME_TO_32_CHAR_MINIMUM  # Generate with: openssl rand -hex 32

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Vendor API Keys (for Action Gateway - future use)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache TTL Settings (seconds)
MODEL_CACHE_TTL=300
FILTER_CACHE_TTL=60

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/ims.log

# Application Settings
APP_ENV=development  # development, staging, production
DEBUG=true

# Rate Limiting (requests per time window)
RATE_LIMIT_ADMIN=10/minute
RATE_LIMIT_PUBLIC_READ=100/minute
RATE_LIMIT_PUBLIC_FILTER=50/minute

# Request Size Limits (bytes)
MAX_REQUEST_SIZE=1000000  # 1MB
